<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.Splash"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:foregroundGravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:id="@+id/splash"
        android:src="@drawable/splash"
        app:tint="@color/colorTextOther"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/splashtext1"
        android:includeFontPadding="false"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorTextIcon"
        android:textSize="@dimen/_25sdp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/splash"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/copyright_2020_by_moatamed_wageh"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/meduim"
        android:textColor="@color/colorTextOther"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/splashtext1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>